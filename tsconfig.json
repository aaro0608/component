{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": false,
    "rootDir": "src",
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "paths": {
      "@wetrial/component": ["./src/index.ts"]
    }
  },
  "include": ["**/src", "**/docs", "src/**/*.tsx", ".eslintrc.js", "tests", "jest.config.js"],
  "exclude": [
    "node_modules",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "tslint:latest",
    "tslint-config-prettier",
    "lib",
    "es",
    "dist",
    "**/__tests__",
    "**/__test__",
    "**/demo/*.tsx"
  ]
}
